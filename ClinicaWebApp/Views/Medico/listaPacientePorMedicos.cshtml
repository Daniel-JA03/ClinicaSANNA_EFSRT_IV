@model IEnumerable<ClinicaWebApp.Models.Usuario.Medico.PacientePorMedico>

@{
    ViewData["Title"] = "listaPacientePorMedicos";
    Layout = "~/Views/Shared/_LayoutMedico.cshtml";
}

<div class="card shadow mb-4">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pacientes Asignados</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ide_pac)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Paciente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.num_doc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fna_usr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_doc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total_Citas)
                        </th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ide_pac)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Paciente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.num_doc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fna_usr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_doc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total_Citas)
                            </td>
                            <td>
                                <a href="@Url.Action("DetallePaciente", "Paciente",  new { id = item.ide_pac })" class="btn btn-info me-2">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>