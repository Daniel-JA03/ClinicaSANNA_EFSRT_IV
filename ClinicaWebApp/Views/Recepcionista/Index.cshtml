
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<div class="row">
    <!-- Encabezado -->
    <div class="col-12 mb-4 text-center">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-gray-800">
                <!-- Icono actualizado: usamos hospital en lugar de clinic-medical -->
                <i class="fas fa-clinic-medical text-primary mr-2"></i>CLÍNICA SANNA
            </h1>
            <span class="badge badge-pill badge-light shadow-sm d-none d-sm-inline-block">
                <i class="fas fa-user-tie text-info mr-1"></i>
            </span>
        </div>
        <hr class="mt-2 mb-4 border-top-2 border-primary" />
    </div>

    <!-- Imagen destacada -->
    <div id="patient-animation" style="width: 400px; height: 400px; margin: 0 auto;"></div>

</div>

<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById("patient-animation"),
        renderer: "svg",
        loop: true,
        autoplay: true,
        path: "/img/ReceptionAnimation.json" // Ej: ~/images/patient.json
    });
</script>

