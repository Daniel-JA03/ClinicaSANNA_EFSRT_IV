@model ClinicaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "actualizarCita";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-calendar-edit me-3"></i>Actualizar Cita
                </h2>
            </div>

            <div class="card-body">
                <form asp-action="actualizarCita">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input asp-for="IdCita" hidden />
                    <input asp-for="IdPago" hidden />

                    <div class="mb-3">
                        <label asp-for="CalendarioCita" class="form-label fw-bold text-primary">
                            <i class="fas fa-calendar-alt " style="margin-right: 8px;"></i>@Html.DisplayNameFor(m => m.CalendarioCita)
                        </label>
                        <input asp-for="CalendarioCita" class="form-control" />
                        <span asp-validation-for="CalendarioCita" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Consultorio" class="form-label fw-bold text-primary">
                            <i class="fas fa-door-open " style="margin-right: 8px;"></i>@Html.DisplayNameFor(m => m.Consultorio)
                        </label>
                        <input asp-for="Consultorio" class="form-control" />
                        <span asp-validation-for="Consultorio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdMedico" class="form-label fw-bold text-primary">
                            <i class="fas fa-user-md " style="margin-right: 8px;"></i>@Html.DisplayNameFor(m => m.IdMedico)
                        </label>
                        @Html.DropDownListFor(model => model.IdMedico,
                                 (SelectList)ViewBag.medicos, "(Seleccione el Medico)",
                                 new { @class = "form-select custom-select", @id = "selMed" })
                        <span asp-validation-for="IdMedico" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="IdPaciente" class="form-label fw-bold text-primary">
                            <i class="fas fa-user " style="margin-right: 8px;"></i>@Html.DisplayNameFor(m => m.IdPaciente)
                        </label>
                        @Html.DropDownListFor(model => model.IdPaciente,
                                 (SelectList)ViewBag.pacientes, "(Seleccione el Paciente)",
                                 new { @class = "form-select custom-select", @id = "selMed" })
                        <span asp-validation-for="IdPaciente" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-warning" style="margin-right: 8px;">
                            <i class="fas fa-sync-alt " style="margin-right: 5px;"></i>Actualizar
                        </button>

                        <a asp-action="ListadoCitas" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


