@model ClinicaWebApp.Models.Pago.Pago

@{
    ViewData["Title"] = "DetallePago";
    var recepcionistaId = Context.Session.GetInt32("RecepcionistaId");
    var pacienteId = Context.Session.GetInt32("PacienteId");

    if (pacienteId != null && pacienteId != 0)
    {
        Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
    }

    else if (recepcionistaId != null && recepcionistaId != 0)
    {
        Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
    }
}


<div class="container mt-4">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">
                <i class="fas fa-file-invoice-dollar" style="margin-right: 15px;"></i>Detalle de Pago
            </h2>
        </div>

        <div class="card-body">
            <h4 class="text-primary mb-4">
                <i class="fas fa-info-circle" style="margin-right: 15px;"></i>Información del Pago
            </h4>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-hashtag me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.IdPago)
                </div>
                <div class="col-md-9">
                    <span class="badge bg-primary text-white px-3 py-2">@Html.DisplayFor(model => model.IdPago)</span>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-calendar-day me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.HoraPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.HoraPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-hand-holding-usd me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.MontoPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.MontoPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-credit-card me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.TipoPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.TipoPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-user me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.NombrePaciente)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.NombrePaciente)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-primary d-flex align-items-center">
                    <i class="fas fa-envelope me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.CorreoPaciente)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.CorreoPaciente)
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-start mt-4">
        <div class="btn-group" style="gap: 15px;">
            @{
                if (pacienteId != null && pacienteId != 0)
                {
                    <a asp-controller="Pago" asp-action="PagosPaciente" asp-route-ide_usr="@pacienteId"
                       class="btn btn-outline-primary px-4">
                        <i class="fas fa-arrow-left me-2"></i> Regresar
                    </a>
                }
                else if (recepcionistaId != null && recepcionistaId != 0)
                {
                    <a asp-controller="Pago" asp-action="PagosRecepcionista" asp-route-ide_usr="@recepcionistaId"
                       class="btn btn-outline-primary px-4">
                        <i class="fas fa-arrow-left me-2"></i> Regresar
                    </a>
                }
            }

            <a asp-action="DetallePagoPDF" asp-route-id="@Model.IdPago" class="btn btn-danger px-4">
                <i class="fas fa-file-pdf me-2"></i> Exportar PDF
            </a>
        </div>
    </div>
</div>