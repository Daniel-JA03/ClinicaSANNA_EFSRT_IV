<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/img/fondo-clinica.png'); /* Asegúrate que la ruta de la imagen sea correcta */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        div {
            width: 100%;
        }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>