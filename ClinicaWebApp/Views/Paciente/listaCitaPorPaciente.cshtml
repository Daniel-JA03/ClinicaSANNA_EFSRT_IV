@model IEnumerable<ClinicaWebApp.Models.Usuario.Paciente.CitaPaciente>

@{
    ViewData["Title"] = "listaCitaPorPaciente";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}

<a class="btn btn-primary mb-2" asp-controller="Pago" asp-action="Crear">Crear Cita</a>

<div class="card shadow mb-4">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Citas Asignadas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ide_cit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cal_cit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.con_cit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.medico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_esp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mon_pag)
                        </th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ide_cit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cal_cit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.con_cit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.medico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_esp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mon_pag)
                            </td>
                            <td>
                                <a href="@Url.Action("DetalleCita", "Cita",  new { id = item.ide_cit })" class="btn btn-info me-2">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

